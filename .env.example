# AWS Configuration
AWS_REGION=us-east-1
DYNAMODB_TABLE_ARTICLES=RiseUp-Articles
DYNAMODB_TABLE_INCIDENTS=RiseUp-Incidents
DYNAMODB_TABLE_SUBSCRIPTIONS=RiseUp-Subscriptions

# API Keys
PERPLEXITY_API_KEY=your_perplexity_api_key_here
APIFY_API_TOKEN=your_apify_api_token_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Cloudflare Images
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# VAPID Keys for Push Notifications (generate with: npm run generate-vapid-keys)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:your-email@example.com

# Next.js Public Environment Variables (accessible in browser)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
